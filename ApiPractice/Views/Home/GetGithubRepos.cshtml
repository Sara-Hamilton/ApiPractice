@{
}

@model IEnumerable<ApiPractice.Models.GithubProfile>

<h2>All Repos</h2>
<hr />

<ul>

    @foreach (var repo in Model.OrderByDescending(x => x.Created_At))
    {
        DateTime parsedDate = DateTime.Parse(repo.Created_At);
        string shortDate = parsedDate.ToString("MM/dd/yyyy");

        <li>Repo Name: <a href=@repo.Html_Url target="_blank"> @Html.DisplayFor(modelItem => repo.Name)</a></li>
        <li>Created Date: @Html.DisplayFor(modelItem => shortDate)</li>
        <li>Description: @Html.DisplayFor(modelItem => repo.Description)</li>
        <li>Language: @Html.DisplayFor(modelItem => repo.Language)</li>
        <li>Count : @Model.Count()</li>
        <li>Repo ID : @Html.DisplayFor(modelItem => repo.Id)</li>
        <hr />
    }

</ul>

